{
    "manifest_version": 3,
    "name": "VimWalk",
    "version": "1.0",
    "description": "Navigate web pages using Vim motions: w, b (word), }, { (paragraph), v (visual select), y (yank).",
    "icons": {
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
    },
    "permissions": [
        "activeTab"
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "vimwalk@example.com",
            "strict_min_version": "109.0",
            "data_collection_permissions": {
                "required": [
                    "none"
                ]
            }
        }
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ]
}
{
    "manifest_version": 3,
    "name": "VimWalk",
    "version": "1.1",
    "description": "Navigate static web content using Vim's w motion.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "VimWalk Settings"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "vimwalk@example.com",
            "strict_min_version": "42.0"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ]
}